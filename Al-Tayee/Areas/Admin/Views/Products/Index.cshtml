@{
    Layout = "_Layout";
}


<!--begin::Page Vendors Styles(used by this page) -->
<link href="~/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />

<div id="Add_Edit_Product" class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="row">
        <div class="col-lg-12">

            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            Add New Product
                        </h3>
                    </div>
                </div>

                <!--begin::Form-->
                <form id="ProductForm" class="kt-form kt-form--label-right">
                    <div class="kt-portlet__body">
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Product Name English:</label>
                                <input type="text" id="productNameEntxt" class="form-control" placeholder="Enter English Product">
                            </div>
                            <div class="col-lg-6">
                                <label class="">Product Name Arabic:</label>
                                <input type="text" id="productNameArtxt" class="form-control" placeholder="Enter Arabic Product">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Description English:</label>
                                <textarea type="text" id="descEntxt" class="form-control" placeholder="Enter English Description"></textarea>
                            </div>
                            <div class="col-lg-6">
                                <label class="">Description Arabic:</label>
                                <textarea type="text" id="descArtx" class="form-control" placeholder="Enter Arabic Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-4">
                                <label>Price:</label>
                                <input type="text" id="priceetxt" class="form-control" placeholder="Enter Price">
                            </div>
                            <div class="col-lg-4">
                                <label class="">Size:</label>
                                <input type="text" id="sizetxt" class="form-control" placeholder="Enter Size">
                            </div>
                            <div class="col-lg-4">
                                <label class="col-3 col-form-label">Is Featured:</label>
                                <div class="col-3">
                                    <span class="kt-switch kt-switch--outline kt-switch--icon kt-switch--success">
                                        <label>
                                            <input type="checkbox" id="IsFeaturedval" name="">
                                            <span></span>
                                        </label>
                                    </span>
                                </div>
                               @* <label class="">Is Featured:</label>
                                <input type="checkbox" class="form-control">*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Base Image:</label>
                                <input type="file" id="BaseImgFile" class="form-control">
                            </div>
                            <div class="col-lg-6">
                                <label>Alt Image:</label>
                                <input type="file" id="altImgFile" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="reset" id="Savebtn" class="btn btn-primary">Save</button>
                                    <button type="reset" id="Cancelbtn" class="btn btn-secondary">Cancel</button>
                                </div>
                                <div class="col-lg-6 kt-align-right">
                                    <button type="reset" id="Deletebtn" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <!--end::Form-->
            </div>
        </div>
    </div>
</div>
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Products
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <div class="dropdown dropdown-inline">
                            <div class="dropdown-menu dropdown-menu-right">
                                <ul class="kt-nav">
                                    <li class="kt-nav__section kt-nav__section--first">
                                        <span class="kt-nav__section-text">Choose an option</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        &nbsp;
                        <a href="#" id="Add_Edit_Productbtn" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            New Record
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__body">

            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>Base Image</th>
                        <th>Name English</th>
                        <th>Name Arabic</th>
                        <th>Price</th>
                        <th>Size</th>
                        <th>Is Featured</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Image</td>
                        <td>Product</td>
                        <td>العنصر</td>
                        <td>Price</td>
                        <td>Size</td>
                        <td>Featured</td>
                        <td nowrap></td>
                    </tr>
                </tbody>
            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>



